<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
    <%- include('../partials/nav.ejs') %>
    <div class="blog-content">
      <h1>Our blog</h1>
      
      <% if(blogs.length >0 ){%>
        <% blogs.forEach(b => {%>
          <a href="/blogs/<%= b.id %> "><%= b.title %></a>
          <p><%= b.body %></p>
          <hr>
        <% }) %>

      <% }else{ %>
        <h2>There is no blog</h2>
        <% } %>
    </div>
    <%- include('../partials/footer.ejs') %>

</body>

</html>